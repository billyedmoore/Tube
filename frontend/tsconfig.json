{
  "compilerOptions": {
    "target": "es2024",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "allowJs": true,
    "lib": [
      "es6",
      "dom"
    ]
  },
  "include": [
    "./src/*.ts"
  ],
  "exclude": [
    "./src/*.test.ts"
  ]
}
